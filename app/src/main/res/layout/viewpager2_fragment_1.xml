<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewpager2_fragment_1"
        >

    <RelativeLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/frame_size"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/pageMarginAndOffset"
            android:layout_marginStart="@dimen/pageMarginAndOffset"
            android:layout_marginRight="@dimen/pageMarginAndOffset"
            android:layout_marginEnd="@dimen/pageMarginAndOffset"
            >

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/skyblue"
                android:id="@+id/imageView"
                tools:ignore="VectorDrawableCompat"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello page 1"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>