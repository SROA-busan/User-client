<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="viewModel"
                type="com.sroa.user_client.viewModel.ReserveViewModel"/>
    </data>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.appcompat.widget.LinearLayoutCompat
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="예약이 완료되었습니다!!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/confirm_product"
                    android:layout_marginTop="@dimen/pageMarginAndOffset"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:textSize="25sp"
                    android:textColor="#000000"/>

            <TextView
                    android:text="@{viewModel.classifyName}"
                    android:hint="서비스 명"
                    android:textSize="15sp"
                    android:layout_width="@dimen/layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:id="@+id/classfiyName"/>

            <TextView
                    android:text="@{viewModel.content}"
                    android:hint="서비스 상세내용"
                    android:layout_width="@dimen/layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:lines="5"
                    android:gravity="top|left"
                    android:scrollHorizontally="false"
                    android:minWidth="10dip"
                    android:maxWidth="5dip"
                    android:id="@+id/textArea"/>

            <TextView
                    android:text="예약일시"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:layout_marginTop="@dimen/pageMargin"
                    android:textSize="18sp"
                    android:id="@+id/confirm_inquiry"/>

            <TextView
                    android:text="@{viewModel.confirmDateTime}"
                    android:hint="예약날짜"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:layout_marginTop="@dimen/pageMargin"
                    android:textSize="18sp"
                    android:id="@+id/confirm_inquiry_date"/>

            <Button
                    android:text="전화"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/confirm_button_call"
                    android:textColor="#000000"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:layout_marginTop="@dimen/pageMargin"
                    android:background="@drawable/button_shape"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="45dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/baseline_call_24"
                    />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/pageMarginAndOffset"/>

            <TextView
                    android:text="고객주소"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/confirm_userAddress"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:layout_marginTop="@dimen/pageMarginAndOffset"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            <TextView
                    android:text="@{viewModel.address}"
                    android:hint="고객주소"
                    android:layout_width="@dimen/layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:lines="2"
                    android:gravity="top|left"
                    android:id="@+id/confirm_userAddress_info"/>

            <View
                    android:layout_gravity="center"
                    android:layout_width="360dp"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/pageMargin"
                    />

            <TextView
                    android:text="서비스센터"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/confirm_engineerAddress"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:layout_marginTop="@dimen/pageMargin"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="담당센터 : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="@dimen/pageMargin"
                        android:layout_marginStart="@dimen/pageMargin"
                        android:id="@+id/confirm_service_Info"/>

                <TextView
                        android:text="@{viewModel.serviceCenterName}"
                        android:hint="서비스 센터 이름"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/confirm_service_Info"
                        android:id="@+id/confirm_service_center_Name"/>

                <TextView
                        android:text="담당기사 : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/confirm_service_Info"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="@dimen/pageMargin"
                        android:layout_marginStart="@dimen/pageMargin"
                        android:id="@+id/confirm_engineer_Info"/>

                <TextView
                        android:text="@{viewModel.engineerName}"
                        android:hint="담당 기사 이름"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/confirm_service_Info"
                        app:layout_constraintLeft_toRightOf="@id/confirm_engineer_Info"
                        android:id="@+id/confirm_engineer_name"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</layout>