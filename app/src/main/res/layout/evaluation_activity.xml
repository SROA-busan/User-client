<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".evalution.EvaluationActivity">

    <EditText
            android:id="@+id/evaluation_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="점수"
            android:inputType="numberDecimal"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/evaluation_editText"
            app:layout_constraintStart_toStartOf="@+id/evaluation_editText"/>

    <EditText
            app:layout_constraintTop_toBottomOf="@id/evaluation_score"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/pageMarginAndOffset"
            android:lines="5"
            android:maxLines="5"
            android:minLines="1"
            android:background="@drawable/button_shape"
            android:gravity="top|left"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:inputType="textMultiLine"
            android:hint="평가입력"
            android:ems="10"
            android:id="@+id/evaluation_editText"/>

    <Button
            android:text="평가 완료"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/evaluation_input"
            android:layout_marginBottom="@dimen/pageMargin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>