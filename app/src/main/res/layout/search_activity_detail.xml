<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="detailInfo"
                type="com.example.user_client.dto.CustomerReservationDetailInfo"/>
    </data>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/input_eval">

        <androidx.appcompat.widget.LinearLayoutCompat
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="예약내용"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_detail_product"
                    android:layout_marginTop="@dimen/pageMarginAndOffset"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:textSize="25sp"
                    android:textColor="#000000"/>

            <TextView
                    android:text="@{detailInfo.productName}"
                    android:hint="서비스 명"
                    android:textSize="15sp"
                    android:layout_width="@dimen/layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:id="@+id/search_detail_classfiyName"/>

            <TextView
                    android:text="@{detailInfo.content}"
                    android:hint="제품 상세내용"
                    android:layout_width="@dimen/layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:lines="5"
                    android:gravity="top|left"
                    android:scrollHorizontally="false"
                    android:minWidth="10dip"
                    android:maxWidth="5dip"
                    android:id="@+id/search_detail_textArea"/>

            <TextView
                    android:text="일시"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:textSize="18sp"
                    android:id="@+id/search_detail_inquiry"/>

            <TextView
                    android:hint="2021년 10월 12일 오전 10:30 ~ 11:30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:id="@+id/search_detail_inquiry_date"
                    />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                <Button
                        android:text="전화"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/search_detail_button_call"
                        android:textColor="#000000"
                        android:layout_marginLeft="@dimen/pageMargin"
                        android:layout_marginStart="@dimen/pageMargin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@drawable/button_shape"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="45dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/baseline_call_24"
                        />

                <Button
                        android:text="반납 예약"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/search_detail_repair_button"
                        android:textColor="#000000"
                        android:layout_marginRight="@dimen/pageMargin"
                        android:layout_marginEnd="@dimen/pageMargin"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/button_shape"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="45dp"
                        />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/pageMarginAndOffset"/>

            <TextView
                    android:text="고객주소"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_detail_userAddress"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:layout_marginTop="@dimen/pageMarginAndOffset"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            <TextView
                    android:text="@{detailInfo.customerAddress}"
                    android:hint="주소"
                    android:layout_width="@dimen/layout_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:lines="2"
                    android:gravity="top|left"
                    android:id="@+id/search_detail_userAddress_info"/>

            <View
                    android:layout_gravity="center"
                    android:layout_width="360dp"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/pageMargin"
                    />

            <TextView
                    android:text="서비스센터"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_detail_engineerAddress"
                    android:layout_marginLeft="@dimen/pageMargin"
                    android:layout_marginStart="@dimen/pageMargin"
                    android:layout_marginTop="@dimen/pageMargin"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="담당센터 : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="@dimen/pageMargin"
                        android:layout_marginStart="@dimen/pageMargin"
                        android:id="@+id/confirm_service_Info"/>

                <TextView
                        android:text="@{detailInfo.centerName}"
                        android:hint="서비스 센터 이름"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/confirm_service_Info"
                        android:id="@+id/confirm_service_center_Name"/>

                <TextView
                        android:text="담당기사 : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/confirm_service_Info"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="@dimen/pageMargin"
                        android:layout_marginStart="@dimen/pageMargin"
                        android:id="@+id/confirm_engineer_Info"/>

                <TextView
                        android:text="@{detailInfo.engineerName}"
                        android:hint="담당 기사 이름"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/confirm_service_Info"
                        app:layout_constraintLeft_toRightOf="@id/confirm_engineer_Info"
                        android:id="@+id/confirm_engineer_name"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                    android:layout_marginTop="@dimen/pageMarginAndOffset"
                    android:text="평가 입력"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/search_detail_evaluation_button"
                    android:layout_marginBottom="@dimen/pageMargin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</layout>
